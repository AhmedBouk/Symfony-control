{% extends 'base.html.twig' %}


{% block body %}
<div class="container">
    {% for movie in movies %}
        <div class="card" style="width: 24rem;">
            <div class="card-body">
                <h5 class="card-title" style="background-color:red">{{ movie.nom }}</h5>
                <p class="card-text">{{ movie.synopsis }}</p>
            </div>
            <div class="card-footer text-muted">
                {{ movie.createdAt | date("m/d/Y") }}
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}